<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.fernando.ichat_alura.activity.MainActivity">


    <LinearLayout
        android:id="@+id/ll_mensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/iv_avatar_usuario"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/et_texto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"/>

        <Button
            android:id="@+id/btn_enviar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:layout_weight="0.5"
          />

    </LinearLayout>


    <ListView
        android:id="@+id/lv_mensagens"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_mensagem"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>
